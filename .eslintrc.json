// ./.eslintrc.json
{
    "env": {
        "jest/globals": true,
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "jest"
    ],
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-empty-function": "off",
        "no-unused-vars":"off",
        "code": 200,
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ]
    }
}